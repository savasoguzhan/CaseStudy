@using CaseStudy.EntityLayer.Concrete
@model List<MeetingVM>
@{

    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Meetings</h2>
        <a href="@Url.Action("Create", "Meeting")" class="btn btn-success">
            <i class="bi bi-plus"></i> Yeni Toplantı Ekle
        </a>
    </div>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Meeting Name</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var meeting in Model)
            {
                <tr>
                    <td>@meeting.Id</td>
                    <td>@meeting.MeetingName</td>
                    <td>@meeting.StartDate.ToString("g")</td>
                    <td>@meeting.EndDate.ToString("g")</td>
                    <td>@meeting.Description</td>
                    <td>
                        <a href="@Url.Action("Edit", "Meeting", new { id = meeting.Id })" class="btn btn-secondary btn-sm">
                            Düzenle
                        </a>
                        <a href="@Url.Action("Delete", "Meeting", new { id = meeting.Id })" class="btn btn-danger btn-sm">
                            Sil
                        </a>  <a href="@Url.Action("PrintReport", "Meeting", new { id = meeting.Id })" class="btn btn-info btn-sm">Rapor Çıktısı Al</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>