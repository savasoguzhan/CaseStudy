@{
}
@model Meeting

<!DOCTYPE html>
<html>
<head>
    <title>Meeting Report</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        h2 {
            text-align: center;
            margin-bottom: 30px;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
        }

            .table th, .table td {
                border: 1px solid black;
                padding: 10px;
                text-align: left;
            }
    </style>
</head>
<body>
    <h2>Meeting Report</h2>
    <table class="table">
        <tr>
            <th>Meeting Name</th>
            <td>@Model.MeetingName</td>
        </tr>
        <tr>
            <th>Start Date</th>
            <td>@Model.StartDate.ToString("g")</td>
        </tr>
        <tr>
            <th>End Date</th>
            <td>@Model.EndDate.ToString("g")</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>@Model.Description</td>
        </tr>
    </table>
</body>
</html>